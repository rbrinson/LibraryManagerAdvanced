{
  "compilerOptions": {
    "target": "es6",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "js",
    "module": "CommonJS",
    "noImplicitAny": true,
    "watch": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "strict": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./app.ts"
  ]
}